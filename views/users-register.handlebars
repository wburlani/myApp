<head>
	<title>MyApp | Users</title>
</head>
<body>
	<hr>
	<h1>USERS</h1>
	
	<form action="/users-post" method="POST">

		<div class="container">
		  <div class="row">
		    <div class="col-md-3">
		      <input class="form-control" type="text" name="name" placeholder="name">
		    </div>
		    <div class="col-md-3">
		      <input class="form-control" type="password" name="password" placeholder="password">
		    </div>
		    <div class="col-md-3">
		      <input class="form-control" type="text" name="email" placeholder="email">
		    </div>
		    <div class="col-md-3">
		      <button type="submit" class="btn btn-primary">Register</button>
		      

		    </div>
		  </div>
		</div>
	</form>
	<hr><br>	
 <table id="table_id" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>CREATED</th>
            <th>MODIFIED</th>
            <th>ACTION</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
    {{#each users}}
        <tr>
	            <td>{{{id}}}</td>
	            <td>{{{name}}}</td>
	            <td>{{{email}}}</td>
	            <td>{{#formatDate createdAt}}{{/formatDate}}</td>
	            <td>{{#formatDate updatedAt}}{{/formatDate}}</td>
	            <td><a href=""><button class="btn btn-warning">Update</button></a></td>
	            <td><a href=""><button class="btn btn-danger">Delete</button></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

</body>
