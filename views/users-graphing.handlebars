<div class="container">
	<div class="row">
		<canvas class="bar col-md-6" width="80" height="60"></canvas>
		<canvas class="line bar col-md-6" width="80" height="60"></canvas>
		<canvas class="polarArea bar col-md-6" width="80" height="60"></canvas>
		<canvas class="pie bar col-md-6" width="80" height="60"></canvas>
	</div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

{{#each users}}
	<script type="text/javascript">
		var lineImaginary = 800;
	</script>
  <script type="text/javascript">
  	
		var ctx = document.getElementsByClassName('bar');
		var chartGraph = new Chart(ctx,{

			type: 'bar',
			data:{
				labels:['Users', 'Name'],
				datasets:[
					{
					data: [lineImaginary],
					label: 'imaginary line',
		            backgroundColor: 'rgba(153, 102, 255, 0.2)',
		            borderColor: 'rgbargba(153, 102, 255, 1)',
					},	

					{
					data: [{{id}}],
					label: 'id',
		            backgroundColor: 'rgba(75, 192, 192, 0.2)',
		            borderColor: 'rgb(75, 192, 192, 1)',

					},
					{
					data: [{{name}}],
					label: 'name',
		            backgroundColor: 'rgba(255, 159, 64, 0.2)',
		            borderColor: 'rgb(255, 159, 64, 1)',
					},
				]
			},
			options: {
			legend:{labels: {fontColor: 'black'}},
			title: {
            	display: true,
            	text: 'Users Graphing (Bar)'
       			 },
		    scales: {
			   	yAxes: [{
		                ticks: {
		                    beginAtZero:true,
		                    fontColor: 'red'
		                },
		            }],
		    	xAxes: [{
		                ticks: {
		                    fontColor: 'green'
		                },
		            }]
	            }		
			}

		});
  </script>
